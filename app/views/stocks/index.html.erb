<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th><%= model_class.human_attribute_name(:serial_no) %></th>
      <th><%= model_class.human_attribute_name(:trade_name) %></th>
      <th><%= model_class.human_attribute_name(:pkg_size) %></th>
      <th><%= model_class.human_attribute_name(:technicl_name) %></th>
      <th><%= model_class.human_attribute_name(:company_name) %></th>
      <th><%= model_class.human_attribute_name(:batch_no) %></th>
      <th><%= model_class.human_attribute_name(:exp_date) %></th>
      <th><%= model_class.human_attribute_name(:qty) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <!-- <td><%= link_to stock.id, stock_path(stock) %></td> -->
        <td><%= stock.serial_no %></td>
        <td><%= stock.trade_name %></td>
        <td><%= stock.pkg_size %></td>
        <td><%= stock.technicl_name %></td>
        <td><%= stock.company_name %></td>
        <td><%= stock.batch_no %></td>
        <td><%= stock.exp_date %></td>
        <td><%= stock.qty %></td>
        <td><%= stock.rate %></td>
        <!-- <td><%=l stock.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_stock_path(stock), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stock_path(stock),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      stock_path(stock), :class => 'btn btn-success btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stock_path,
            :class => 'btn btn-primary' %>
<%= link_to "Back", root_path, :class => 'btn btn-default' %>
