<%- model_class = Stock -%>
<div class="row customer-info" >
  <div class="text-center">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
    <hr/>
  </div>
  <div class="col-md-6 col-sm-6 col-lg-6 col-md-offset-3 col-sm-offset-3 col-lg-offset-3 text">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:serial_no) %>:</strong></dt>
      <dd><%= @stock.serial_no %></dd>
      <dt><strong><%= model_class.human_attribute_name(:trade_name) %>:</strong></dt>
      <dd><%= @stock.trade_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:pkg_size) %>:</strong></dt>
      <dd><%= @stock.pkg_size %></dd>
      <dt><strong><%= model_class.human_attribute_name(:technicl_name) %>:</strong></dt>
      <dd><%= @stock.technicl_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
      <dd><%= @stock.company_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:batch_no) %>:</strong></dt>
      <dd><%= @stock.batch_no %></dd>
      <dt><strong><%= model_class.human_attribute_name(:exp_date) %>:</strong></dt>
      <dd><%= @stock.exp_date %></dd>
      <dt><strong><%= model_class.human_attribute_name(:qty) %>:</strong></dt>
      <dd><%= @stock.qty %></dd>
      <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
      <dd><%= @stock.rate %></dd>
    </dl>
  </div>
  <div class="col-md-6 col-sm-6 col-lg-6 col-md-offset-3 col-sm-offset-3 col-lg-offset-3 text-center"
       style="padding: 10px; margin-top: 10px;" >

    <%= link_to t('.back', :default => t("helpers.links.back")),
                stocks_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_stock_path(@stock), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                stock_path(@stock),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
</div>




